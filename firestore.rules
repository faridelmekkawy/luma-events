rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/lumaAdmins/$(request.auth.uid));
    }

    function isEventOwner(eventId) {
      return isSignedIn() &&
        get(/databases/$(database)/documents/events/$(eventId)).data.ownerUserId == request.auth.uid;
    }

    match /systemSettings/production {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /lumaAdmins/{uid} {
      allow read: if request.auth.uid == uid;
      allow write: if false;
    }

    match /events/{eventId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.ownerUserId == request.auth.uid;
      allow update, delete: if isAdmin() || isEventOwner(eventId);

      match /vendors/{vendorId} {
        allow read: if isSignedIn();
        allow write: if isAdmin() || isEventOwner(eventId);
      }
    }

    match /brands/{brandId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.ownerUserId == request.auth.uid;
      allow update, delete: if isAdmin() || resource.data.ownerUserId == request.auth.uid;
    }

    match /{path=**}/orders/{orderId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }

    match /auditLogs/{logId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
